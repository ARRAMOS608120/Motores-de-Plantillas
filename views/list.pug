extends layout

block formu
    <h2 style="color:blue;">Vista de Productos</h2>

    -const hayProductos = productos.length > 0; 
        if hayProductos 
            <div class="table-responsive">
                <table class="table table-dark">
                    <tr style="color: yellow;">
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</tr>
                    </tr>
                    ul 
                    each producto in productos
                        <tr>
                            <td>
                                li= producto.nombre
                            </td>
                            <td>
                                li= producto.precio 
                            </td>
                            <td>
                                <img src=  #{producto.foto}> 
                            </td>
                        </tr>
                </table>
            </div>
        unless hayProductos
            <h3 class="alert alert-danger">No hay productos</h1>
  

